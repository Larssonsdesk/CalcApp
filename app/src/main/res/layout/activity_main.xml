<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curtain">


        <EditText
            android:id="@+id/textV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textV"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:fontFamily="cursive"
            android:hint="Enter your first number"
            android:inputType="numberSigned|number|numberDecimal"
            android:padding="18dp"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#c0c0c0"

            android:textStyle="bold" />


        <EditText
            android:id="@+id/textV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginVertical="225dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:fontFamily="cursive"
            android:hint="Enter your second value"
            android:includeFontPadding="true"
            android:inputType="numberSigned|number|numberDecimal"
            android:padding="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#a0a0a0"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="129dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="#99ccff"
            android:fontFamily="cursive"
            android:padding="12sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:background="#003366"
            android:fontFamily="cursive"
            android:onClick="solution"
            android:padding="10dp"
            android:text="ADD"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@id/add"
            android:background="#003366"
            android:fontFamily="cursive"
            android:onClick="solution"
            android:padding="10dp"
            android:text="SUBTRACT"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold" />

        />

    </RelativeLayout>

</LinearLayout>